  <style>
    body {
      margin: 0;
      font-family: 'Inter', sans-serif;
      background: #f4f7f9;
      color: #1e2a38;
    }

    .hero-section {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      justify-content: space-between;
      padding: 1.5rem;
      background: linear-gradient(to right, #0f2027, #203a43, #2c5364);
      color: #fff;
    }

    .hero-text {
      flex: 1;
      min-width: 280px;
      padding-right: 2rem;
    }

    .hero-text h2 {
      font-size: 3rem;
      line-height: 1.5;
    }

    .dynamic-word span {
      display: inline-block;
      animation: bounce 1.5s infinite;
      opacity: 0.8;
      color: brown;
    }

    .dynamic-word span:nth-child(1) { animation-delay: 0s; }
    .dynamic-word span:nth-child(2) { animation-delay: 0.2s; }
    .dynamic-word span:nth-child(3) { animation-delay: 0.4s; }
    .dynamic-word span:nth-child(4) { animation-delay: 0.6s; }
    .dynamic-word span:nth-child(5) { animation-delay: 0.8s; }
    .dynamic-word span:nth-child(6) { animation-delay: 1s; }
    .dynamic-word span:nth-child(7) { animation-delay: 1.2s; }

    @keyframes bounce {
      0%, 100% { transform: translateY(0); opacity: 1; }
      50% { transform: translateY(-5px); opacity: 1; }
    }

    .hero-img {
      flex: 1;
      text-align: center;
    }

    .hero-img img {
      max-width: 100%;
      width: 600px;
      height: auto;
      border-radius: 15px;
     
    }


    .map-section {
      margin: 2rem auto;
      max-width: 100%;
      padding: 0 1rem;
    }

    .map-section iframe {
      width: 100%;
      height: 350px;
      border: 0;
      border-radius: 10px;
    }

    @media (max-width: 768px) {
      .hero-section {
        flex-direction: column;
        text-align: center;
      }
      .hero-text {
        padding-right: 0;
        margin-bottom: 2rem;
      }
    }
  </style>
</head>
