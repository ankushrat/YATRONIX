  <style>
  body {
  margin: 0;
  font-family: 'Inter', sans-serif;
  background: #f4f7f9;
  color: #1e2a38;
}

.hero-section {
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start; /* Important: Text ko top align karta hai */
  justify-content: space-between;
  padding: 3rem 1.5rem;
  background: linear-gradient(to right, #0f2027, #203a43, #2c5364);
  color: #fff;
  gap: 2rem;
}

.hero-text {
  flex: 1;
  min-width: 300px;
  padding-right: 2rem;
}

.hero-text h2 {
  font-size: 2.5rem;
  font-weight: 700;
  line-height: 3.2rem;
  text-align: justify;
  margin-bottom: 1rem;
}

.hero-text p {
  font-size: 1.2rem;
  line-height: 1.9rem;
  text-align: justify;
  margin-bottom: 1rem;
}

.dynamic-word span {
  display: inline-block;
  animation: bounce 1.5s infinite;
  opacity: 0.9;
  color: #ff7e67;
  font-weight: bold;
}

.dynamic-word span:nth-child(1) { animation-delay: 0s; }
.dynamic-word span:nth-child(2) { animation-delay: 0.2s; }
.dynamic-word span:nth-child(3) { animation-delay: 0.4s; }
.dynamic-word span:nth-child(4) { animation-delay: 0.6s; }
.dynamic-word span:nth-child(5) { animation-delay: 0.8s; }
.dynamic-word span:nth-child(6) { animation-delay: 1s; }
.dynamic-word span:nth-child(7) { animation-delay: 1.2s; }

@keyframes bounce {
  0%, 100% { transform: translateY(0); opacity: 1; }
  50% { transform: translateY(-5px); opacity: 1; }
}

.hero-img {
  flex: 1;
  min-width: 280px;
  text-align: center;
}

.hero-img img {
  max-width: 100%;
  width: 100%;
  height: auto;
  border-radius: 15px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
}

/* Map Section
