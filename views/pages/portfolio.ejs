}

.hero {
  background-image: url('https://img.freepik.com/free-photo/overhead-view-grey-craftpapers-blue-background_23-2147878455.jpg');
  background-size: cover;
  background-position: center;
  height: 500px;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.glow-title {
  font-size: 4rem;
  color: #fff;
  text-shadow: 0 0 20px #00f7ff, 0 0 40px #00f7ff;
  animation: glowAnim 2s infinite alternate;
}

.hero-sub {
  font-size: 1.5rem;
  margin-top: 10px;
  color: #dbeafe;
}

.services {
  padding: 0px 20px;
  max-width: 1200px;
  margin: auto;
}

.glow-heading {
  font-size: 2.5rem;
  text-align: center;
  margin-bottom: 40px;
  text-shadow: 0 0 10px #00f7ff;
}

.service-grid {
  display: grid;
  gap: 30px;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
}

.service-card {
  background: #1e293b;
  text-decoration: none;
  border-radius: 15px;
  padding: 20px;
  text-align: center;
  box-shadow: 0 0 10px rgba(0,255,255,0.1);
  transition: transform 0.3s, box-shadow 0.3s;
}

.service-card:hover {
  transform: translateY(-10px);
  box-shadow: 0 0 20px rgba(0,255,255,0.3);
}

.service-card img {
  width: 300px;
  height: 300px;
  margin-bottom: 20px;
}

.service-card h3 {
  font-size: 1.5rem;
  color: #38bdf8;
}

.service-card p {
  font-size: 1rem;
  color: #cbd5e1;
}

.cta-section {
  background-color: #1e3a8a;
  padding: 60px 20px;
  text-align: center;
}

.cta-section p {
  font-size: 1.2rem;
  color: #dbeafe;
  margin-bottom: 20px;
}

.cta-btn {
  background-color: #0ea5e9;
  padding: 12px 30px;
  font-size: 1.1rem;
  color: #fff;
  border-radius: 8px;
  text-decoration: none;
  transition: background 0.3s;
}

.cta-btn:hover {
  background-color: #38bdf8;
}

@keyframes glowAnim {
  from {
    text-shadow: 0 0 15px #00f7ff;
  }
  to {
    text-shadow: 0 0 35px #00f7ff, 0 0 60px #00f7ff;
  }
}
@media (max-width:630px) {
